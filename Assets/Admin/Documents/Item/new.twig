<div class="row" data-rbs-document-editor-base="" data-model="Rbs_Highlight_Item">
	<div class="col-md-12">
		<rbs-page-header title="{{ i18nAttr('m.rbs.admin.adminjs.new_resource', ['ucf']) }}"
			sub-title="{{ i18nAttr(modelKey('Rbs_Highlight_Item'), ['ucf']) }}"></rbs-page-header>
	</div>

	<div data-rbs-aside-column="">
		{% include '@Rbs_Admin/view/asides.twig' %}
	</div>

	<div class="document-form" data-rbs-main-column="">
		<form data-ng-submit="submit()" data-rbs-document-editor-new=""
			data-rbs-document-editor-rbs-highlight-item-new="">
			<fieldset data-rbs-editor-section=""
				data-editor-section-label="{{ i18nAttr('m.rbs.admin.admin.general_properties', ['ucf']) }}">

				<rbs-field property="refLCID" required="true"
					label="{{ i18nAttr(propertyKey('Rbs_Highlight_Item', 'refLCID'), ['ucf']) }}">
					<select class="form-control" data-ng-model="document.refLCID"
						data-rbs-items-from-collection="Rbs_Generic_Collection_Languages" data-ucfirst="true">
					</select>
				</rbs-field>

				<rbs-field-text property="label" required="true"
					label="{{ i18nAttr(propertyKey('Rbs_Highlight_Item', 'label'), ['ucf']) }}">
				</rbs-field-text>

				<rbs-field-text property="title"
					label="{{ i18nAttr(propertyKey('Rbs_Highlight_Item', 'title'), ['ucf']) }}">
				</rbs-field-text>

				<rbs-field-picker property="visual"
					label="{{ i18nAttr(propertyKey('Rbs_Highlight_Item', 'visual'), ['ucf']) }}"
					accepted-model="Rbs_Media_Image">
				</rbs-field-picker>


				<rbs-field-picker property="targetDocument"
					label="{{ i18nAttr(propertyKey('Rbs_Highlight_Item', 'targetDocument'), ['ucf']) }}"
					select-model="{publishable:true, abstract:false}">
				</rbs-field-picker>

				<rbs-field-text property="targetUrl"
					label="{{ i18nAttr(propertyKey('Rbs_Highlight_Item', 'targetUrl'), ['ucf']) }}">
				</rbs-field-text>

				<rbs-field-rich-text property="description"
					label="{{ i18nAttr(propertyKey('Rbs_Highlight_Item', 'description'), ['ucf']) }}">
				</rbs-field-rich-text>

				<!-- cannot generate form for property "extendedData".
					label="{{ i18nAttr(propertyKey('Rbs_Highlight_Item', 'extendedData'), ['ucf']) }}"
				-->
			</fieldset>

			<fieldset data-rbs-editor-section="activation"
				data-editor-section-label="{{ i18nAttr('m.rbs.admin.admin.activation_properties', ['ucf']) }}"
				data-rbs-document-activation-section="">
			</fieldset>

			<fieldset data-rbs-editor-section="systeminfo"
				data-editor-section-label="{{ i18nAttr('m.rbs.admin.adminjs.status', ['ucf']) }}"
				data-rbs-document-system-info-section="">
			</fieldset>

			<rbs-document-editor-button-bar></rbs-document-editor-button-bar>
		</form>
	</div>
</div>